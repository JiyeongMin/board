<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mbc.mjy_board.board.BoardService">
<insert id="boardinsert">
	insert into board(boardnumber,boardwriter,boardtitle,boardcontent,groups) values(boardnumber_seq.nextval,#{param1},#{param2},#{param3},boardnumber_seq.currval)
</insert>

<select id="outm" resultType="com.mbc.mjy_board.board.BoardDTO">
	select boardnumber,boardwriter,boardtitle,boardcontent,to_char(boarddate,'yyyy-MM-dd')boarddate,boardreadcnt,groups,step,indent from board order by groups desc, step asc
	<!-- grop별 desc(내림차순 정렬), step 별 asc(오름차순 정렬) // 그룹별로 내림차순, 그룹이 같으면 step 별로 오름차순 -->
</select>
<select id="detail" resultType="com.mbc.mjy_board.board.BoardDTO">
	select boardnumber,boardwriter,boardtitle,boardcontent,to_char(boarddate,'yyyy-MM-dd')boarddate,boardreadcnt,groups,step,indent from board where boardnumber=#{param1}
</select>
<update id="readcnt">
	update board set boardreadcnt = boardreadcnt+1 where boardnumber=#{param1}
</update>
<select id="reply" resultType="com.mbc.mjy_board.board.BoardDTO">
	select boardnumber,boardwriter,boardtitle,boardcontent,to_char(boarddate,'yyyy-MM-dd')boarddate,boardreadcnt,groups,step,indent from board where boardnumber=#{param1}
</select>
<update id="stepup">
	update board set step = step+1 where groups=#{param1} and step > #{param2}
	<!-- board 에서 step이 기존 step 보다 크면서 groups가 #{param1}의 위치랑 같을 경우, step을 1씩 증가시켜라 -->
</update>
<insert id="replysave">
	insert into board(boardnumber,boardwriter,boardtitle,boardcontent,groups,step,indent) values(boardnumber_seq.nextval,#{param2},#{param3},#{param4},#{param5},#{param6},#{param7})
</insert>

<!--  33333 -->
<!-- 페이징처리에서 전첼레코드수 구하기 -->
<select id="total" resultType="int">
   select count(*)from BOARD
</select>

<select id="page" resultType="com.mbc.mjy_board.board.BoardDTO">
   select * from (
   select rownum rn,A.* from(  
   select boardnumber,boardwriter,boardtitle,boardcontent,to_char(boarddate,'yyyy-MM-dd')boarddate,boardreadcnt,groups,step,indent from BOARD order by groups DESC,step asc)A)
   where rn between #{start} AND #{end}
</select>

</mapper>