<!-- 페이징처리에서 전첼레코드수 구하기 -->
<select id="total" resultType="int">
   select count(*)from BOOK0910
</select>

<select id="page" resultType="com.mbc.mjy_board.book.BookDTO">
   select * from (
   select rownum rn,A.* from(  
   select booknumber,bookname,bookwriter,bookcompany,bookprice,to_char(bookdate,'yyyy-MM-dd')bookdate,bookcontent,bookimage,bookreadcnt,groups,step,indent from BOOK0910 order by groups DESC,step asc)A)
   where rn between #{start} AND #{end}
</select>


